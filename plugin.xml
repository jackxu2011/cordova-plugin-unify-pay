<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-unify-pay" version="1.0.0">
  <name>Unifypay</name>
  <description>Cordova Plugin for unify pay</description>
  <license>MIT</license>
  <keywords>cordova, unionpay, qmf, unifypay</keywords>

  <!-- add this to your config.xml -->
  <!-- <preference name="WECHATAPPID" value="YOUR_WECHAT_APP_ID_HERE" /> -->
  <preference name="WECHATAPPID"  default=""/>

  <!-- <preference name="ALIPAYAPPID" value="YOUR_ALIPAY_APP_ID_HERE" /> -->
  <preference name="ALIPAYAPPID" default=""/>

  <engines>
    <engine name="cordova" version=">=7.1.0" />
    <engine name="cordova-android" version=">=7.0.0" />
    <engine name="cordova-ios" version=">=4.3.0" />
  </engines>

  <!-- js module-->
  <js-module src="www/Unifypay.js" name="Unifypay">
    <clobbers target="Unifypay" />
  </js-module>
  
  <!-- ios -->
  <platform name="ios">
    
    <config-file target="config.xml" parent="/*">
      <feature name="Unifypay">
        <param name="ios-package" value="Unifypay" />
        <param name="onload" value="true" />
      </feature>
      <preference name="WECHATAPPID" value="$WECHATAPPID"/>
      <preference name="ALIPAYAPPID" value="$ALIPAYAPPID"/>
    </config-file>
    <config-file target="*-Info.plist" parent="LSApplicationQueriesSchemes">
      <array>
        <string>weixin</string>
        <string>wechat</string>
        <string>alipays</string>
      </array>
    </config-file>

    <config-file target="*-Info.plist" parent="NSAppTransportSecurity">
      <dict>
          <key>NSAllowsArbitraryLoads</key>
          <true/>
      </dict>
    </config-file>

    <config-file target="*-Info.plist" parent="CFBundleURLTypes">
      <array>
        <dict>
          <key>CFBundleURLName</key>
          <string>weixin</string>
          <key>CFBundleURLSchemes</key>
          <array>
            <string>$WECHATAPPID</string>
          </array>
        </dict>
      </array>
    </config-file>

    <!-- plugin source code -->
    <header-file src="src/ios/Unifypay.h" />
    <source-file src="src/ios/Unifypay.m" />

    <!-- Wechat and alipay Official -->
    <framework src="WechatOpenSDK" type="podspec" spec=""/>
    <framework src="AlipaySDK-iOS" type="podspec" spec=""/>

    <!-- ums pay libs -->
    <header-file src="src/ios/libs/Chinaums/include/UMSPosPayOnly/UMSPPPayFastPay.h" />
    <header-file src="src/ios/libs/Chinaums/include/UMSPosPayOnly/UMSPPPayOrder.h" />
    <header-file src="src/ios/libs/Chinaums/include/UMSPosPayOnly/UMSPPPayPosPay.h" />
    <header-file src="src/ios/libs/Chinaums/include/UMSPosPayOnly/UMSPPPayPluginSettings.h" />
    <header-file src="src/ios/libs/Chinaums/include/UMSPosPayOnly/UMSPPPayUnifyPayPlugin.h" />
    <header-file src="src/ios/libs/Chinaums/include/UMSPosPayOnly/UMSPPPayVersionsInfo.h" />
    <source-file src="src/ios/libs/Chinaums/libUMSPosPayOnly.a" framework="true" />
    <resource-file src="src/ios/libs/Chinaums/PosPay_Resource.bundle" />
    <resource-file src="src/ios/libs/Chinaums/UMSSecKeyboardLibResource.bundle" />

    <!-- uppay -->
    <header-file src="src/ios/libs/UPPaymentControl/UPPaymentControl.h"/>
    <source-file src="src/ios/libs/UPPaymentControl/libPaymentControl.a" framework="true" />
    
  </platform>

  <!-- android -->
  <platform name="android">

    <hook type="after_plugin_add" src="scripts/android-install.js" />
    <hook type="after_plugin_install" src="scripts/android-install.js" />
    <hook type="before_plugin_rm" src="scripts/android-install.js" />
    <hook type="before_plugin_uninstall" src="scripts/android-install.js" />

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="Unifypay">
        <param name="android-package" value="com.linkcld.cordova.Unifypay"/>
        <param name="onload" value="true" />
      </feature>
      <preference name="WECHATAPPID" value="$WECHATAPPID"/>
      <preference name="ALIPAYAPPID" value="$ALIPAYAPPID"/>
    </config-file>

    <config-file target="AndroidManifest.xml" parent="/*">
      <uses-permission android:name="android.permission.INTERNET"/>
      <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
      <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
      <uses-permission android:name="android.permission.READ_PHONE_STATE" />
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    </config-file>

    <config-file target="AndroidManifest.xml" parent="/manifest/application">
      <activity
        android:name=".wxapi.WXEntryActivity"
        android:label="@string/launcher_name"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.VIEW"/>
            <category android:name="android.intent.category.DEFAULT"/>
            <data android:scheme="$WECHATAPPID"/>
        </intent-filter>
      </activity>
      <activity
        android:name=".wxapi.WXPayEntryActivity"
        android:label="@string/launcher_name"
        android:exported="true"
        android:launchMode="singleTop">
        <intent-filter>
            <action android:name="android.intent.action.VIEW"/>
            <category android:name="android.intent.category.DEFAULT"/>
            <data android:scheme="$WECHATAPPID"/>
        </intent-filter>
      </activity>
    </config-file>

    <framework src="src/android/Unifypay.gradle" custom="true" type="gradleReference" />
    <source-file src="src/android/Unifypay.java" target-dir="src/com/linkcld/cordova" />
    <!-- baidu 地图 -->
    <resource-file src="src/android/libs/armeabi/liblocSDK7b.so" target="jniLibs/armeabi/liblocSDK7b.so"/>
    <resource-file src="src/android/libs/armeabi/libindoor.so" target="jniLibs/armeabi/libindoor.so"/>
    <resource-file src="src/android/libs/armeabi-v7a/liblocSDK7b.so" target="jniLibs/armeabi-v7a/liblocSDK7b.so"/>
    <resource-file src="src/android/libs/armeabi-v7a/libindoor.so" target="jniLibs/armeabi-v7a/libindoor.so"/>
    <resource-file src="src/android/libs/arm64-v8a/liblocSDK7b.so" target="jniLibs/arm64-v8a/liblocSDK7b.so"/>
    <resource-file src="src/android/libs/arm64-v8a/libindoor.so" target="jniLibs/arm64-v8a/libindoor.so"/>
    <resource-file src="src/android/libs/x86/liblocSDK7b.so" target="jniLibs/x86/liblocSDK7b.so"/>
    <resource-file src="src/android/libs/x86/libindoor.so" target="jniLibs/x86/libindoor.so"/>
    <resource-file src="src/android/libs/x86_64/liblocSDK7b.so" target="jniLibs/x86_64/liblocSDK7b.so"/>
    <resource-file src="src/android/libs/x86_64/libindoor.so" target="jniLibs/x86_64/libindoor.so"/>
    <lib-file src="src/android/libs/BaiduLBS_Android.jar"/>

    <!-- up pay -->
    <lib-file src="src/android/libs/UPPayAssistEx.jar"/>
    <lib-file src="src/android/libs/UPPayPluginExPro.jar"/>
    
    <!-- ums pay libs -->
		<lib-file src="src/android/libs/qmf-ppplugin-android-3.0.3.aar"/>
    <lib-file src="src/android/libs/alipaySdk-15.5.7-20181023110917.aar"/>
  </platform>
</plugin>